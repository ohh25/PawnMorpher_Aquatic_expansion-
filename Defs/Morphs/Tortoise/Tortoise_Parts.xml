<Defs xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Schemas/MutationDef.xsd">
	<Pawnmorph.Hediffs.MutationDef Name="TortoisePart" ParentName="PawnmorphPart" Abstract="true">
		<classInfluence>TortoiseMorph</classInfluence>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="TortoisePart">
		<defName>EtherTortoiseJaw</defName>
		<label>tortoise beak</label>
		<description>The hard and rather dangerous beak of a tortoise.</description>
		<mutationTale>GrewMuzzleMisc</mutationTale>
		<stages>
			<li>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.40</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
			<li>
				<label>adapted</label>
				<minSeverity>1</minSeverity>
				<capMods>
					<li>
						<capacity>Talking</capacity>
						<offset>-0.08</offset>
					</li>
					<li>
						<capacity>Eating</capacity>
						<offset>0.40</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>teeth</label>
						<labelUsedInLogging>False</labelUsedInLogging>
						<capacities>
							<li>Bite</li>
						</capacities>
						<power>10</power>
						<cooldownTime>2</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
					</li>
				</tools>
			</li>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.25</severityPerDay>
			</li>
		</comps>
		<parts>
			<li>Jaw</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="TortoisePart">
		<defName>EtherTortoiseEar</defName>
		<label>earhole</label>
		<description>!!!EtherTortoiseEar needs a description!!!</description>
		<mutationTale>EarsChangedMisc</mutationTale>
		<parts>
			<li>Ear</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>

	<Pawnmorph.Hediffs.MutationDef ParentName="TortoisePart">
		<defName>EtherTortoiseTail</defName>
		<label>!!!EtherTortoiseTail needs a label!!!</label>
		<description>!!!EtherTortoiseTail needs a description!!!</description>
		<mutationTale>GrewTail</mutationTale>
		<parts>
			<li>Tail</li>
			<li>MorphTail</li>
		</parts>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="TortoisePart">
		<defName>EtherTortoiseShell</defName>
		<label>shell</label>
		<description>An ibuilt suit of armour.</description>
		<parts>
			<li>Torso</li>
		</parts>
		<stages>
		<li Class="Pawnmorph.Hediffs.MutationStage">
			<statOffsets>
				<ArmorRating_Sharp>0.70</ArmorRating_Sharp>
				<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			</statOffsets>
		</li>
		</stages>
	</Pawnmorph.Hediffs.MutationDef>
	
	<Pawnmorph.Hediffs.MutationDef ParentName="TortoisePart">
		<defName>EtherTortoiseHand</defName>
		<label>turtlehand</label>
		<description>[PAWN_nameDef]'s fingers has been fused into 3 whole with obvious signs of the previous 5 fingers.</description>
		<parts>
			<li>Hand<li>
		</parts>
		<categories>
			<li>Major</li>
		</categories>
		<stages>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<labelOverride>fusing</labelOverride>
				<description>Some of the [PAWN_nameDef]'s fingers are fusing together.It's kinda bit wired at looking.</description>
				<minSeverity>0</minSeverity>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.3</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>unfamiliar</label>
				<minSeverity>0.3</minSeverity>
				<description>The [PAWN_nameDef]'s toes fused into 3 whole with obvious signs of the previous 5 fingers.</description>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>-0.1</offset>
					</li>
				</capMods>
			</li>
			<li Class="Pawnmorph.Hediffs.MutationStage">
				<label>adapted</label>
				<minSeverity>1.0</minSeverity>
				<description>The [PAWN_nameDef] has adapted to the 3 fingers tortoise hands.</description>
				<capMods>
					<li>
						<capacity>Manipulation</capacity>
						<offset>0.1</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<comps>
			<li Class="Pawnmorph.Hediffs.CompProperties_MutationSeverityAdjust">
				<severityPerDay>0.15</severityPerDay>
			</li>
		</comps>
	</Pawnmorph.Hediffs.MutationDef>
	
</Defs>